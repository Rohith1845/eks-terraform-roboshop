pipeline {
    agent {
        node {
            label 'Agent-1'
        }
    }
    environment{
        COURSE = "JENKINS"
    }
    options {
        timeout(time: 1 , unit: 'HOURS')
        disableConcurrentBuilds()
        ansiColor('xterm')
    }
    // parameters {
    //     string(name: 'PERSON', defaultValue: 'Mr Jenkins', description: 'Who should I say hello to?')
    //     text(name: 'BIOGRAPHY', defaultValue: '', description: 'Enter some information about the person')
    //     booleanParam(name: 'DEPLOY', defaultValue: false, description: 'Toggle this value')
    //     choice(name: 'CHOICE', choices: ['One', 'Two', 'Three'], description: 'Pick something')
    //     password(name: 'PASSWORD', defaultValue: 'SECRET', description: 'Enter a password')
    // }


    stages {
        stage('Init'){
            steps {
                script {
                    withAWS(region:'us-east-1',credentials:'aws-creds'){
                        // sh """
                        //     cd 00-vpc
                        //     terraform init
                        // """
                        sh """
                    # 1. Print current location so we know where we are
                    echo "Full Path: \$(pwd)"
                    
                    # 2. List files to verify '00-vpc' actually exists here
                    ls -F
                    
                    # 3. Try to enter the directory and run terraform
                    if [ -d "00-vpc" ]; then
                        cd 00-vpc
                        echo "Entered 00-vpc. Contents:"
                        ls -F
                        
                        # Use the absolute path but wrap it in a 'command' check
                        /usr/bin/terraform init
                    else
                        echo "ERROR: Directory 00-vpc not found in \$(pwd)"
                        exit 1
                    fi
                """
                    }
                }
            }
        }
        stage('Plan'){
            steps {
                script {
                    withAWS(region:'us-east-1',credentials:'aws-creds'){
                        sh """
                            cd 00-vpc
                            terraform plan
                        """
                    }
                }
            }
        }
        stage('Apply'){
            // input {
            //     message "should we continue?"
            //     ok "Yes, we should."
            //     submitter "alice,bob"
            //     parameters{
            //         string(name: 'PRESON', defaultValue: 'MR JENKINS', describe: "who should i say hello to?")
            //     }
            // }
            steps {
                script {
                    withAWS(region:'us-east-1',credentials:'aws-creds'){
                        sh """
                            cd 00-vpc
                            terraform apply -auto-approve
                        """
                    }
                }
            }
        }
        stage('Trigger SG'){
            steps {
                script {
                    build job: '10-sg',
                    wait: false
                    propagate: false
                }
            }
        }
    }
    post {
        always{
            echo "I always say hello"
            cleanWs()
        }
        success{
            echo "I'm successful"
        }
        failure{
            echo "Sorry it's a failure"
        }
        aborted{
            echo "pipeline aborted"
        }
    }
}